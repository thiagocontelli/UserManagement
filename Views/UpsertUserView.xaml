<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="UserManagement.Views.UpsertUserView">
    <ScrollView>
        <VerticalStackLayout
        Padding="20"
        Spacing="32">
            <VerticalStackLayout Spacing="8">
                <Label 
                    FontSize="32"
                    FontAttributes="Bold"
                    Text="{Binding Title}" />
                <Label 
                    Text="{Binding Subtitle}" />
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="16">
                <material:TextField Title="Name" Text="{Binding Name}" />
                <material:TextField Title="Last Name" Text="{Binding LastName}" />
                <material:TextField Title="Age" Text="{Binding Age}" />
                <material:TextField Title="Address" Text="{Binding Address}" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Button 
                    StyleClass="FilledButton" 
                    Text="Submit"
                    HorizontalOptions="Center"
                    Command="{Binding UpsertUserCommand}"/>
                <Button 
                    StyleClass="TextButton" 
                    Text="Cancel"
                    HorizontalOptions="Center"
                    Command="{Binding CancelCommand}"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>