<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="UserManagement.Views.AddUserView">
    <ScrollView>
        <VerticalStackLayout
        Padding="20"
        Spacing="32">
            <VerticalStackLayout Spacing="8">
                <Label 
                    FontSize="32"
                    FontAttributes="Bold"
                    Text="Add user" />
                <Label 
                    Text="Add new user to your system." />
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="16">
                <material:TextField Title="Name" />
                <material:TextField Title="LastName" />
                <material:TextField Title="Age" Keyboard="Numeric" />
                <material:TextField Title="Address" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Button 
                    StyleClass="FilledButton" 
                    Text="Submit"
                    HorizontalOptions="Center"/>
                <Button 
                    StyleClass="TextButton" 
                    Text="Cancel"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>